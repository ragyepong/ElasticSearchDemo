@model SearchForm
@{
    var sort = Model.Sort;
}
    <select name="@Html.NameFor(m => m.Sort).ToLowerInvariant()" class="label label-select">
        <option value="relevance" selected="@(sort == SearchSort.Relevance ? true : false )">Relevance</option>
        <option value="rating" selected="@(sort == SearchSort.Rating ? true : false )">Rating</option>
        <option value="recent" selected="@(sort == SearchSort.Recent ? true : false )">Recency</option>
    </select>